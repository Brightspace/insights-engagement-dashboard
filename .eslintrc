{
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": [
      "plugin:json/recommended",
	  "brightspace/lit-config",
	  "plugin:lit-a11y/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
      "json",
	  "html",
	  "lit-a11y"
    ],
    "rules": {
        "no-console": ["warn"],
        "sort-class-members/sort-class-members": ["off"],
        "indent": ["warn"]
    }
}
